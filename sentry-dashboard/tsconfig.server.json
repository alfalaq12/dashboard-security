{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist-server",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": false
    },
    "include": [
        "server/**/*.ts",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}